<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChattingHomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chattingHomeLayout"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chatting Section"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:padding="@dimen/_10sdp"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/_52sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_settings_24"
            android:backgroundTint="@color/purple_700"
            android:background="@color/white"
            android:id="@+id/chattingHomeSettings"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="@dimen/_52sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="@color/purple_700"
            android:id="@+id/chattingHomeBack"
            android:layout_weight="1"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chattingHomeLayout"
        android:id="@+id/chattingHomeRecyclerView"
        android:layout_marginTop="@dimen/_5sdp"
        />
</RelativeLayout>